@model Survey
<form asp-action="Survey" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <span asp-validation-for="Location"></span>
        <input asp-for="Location">
    </div>
    <div class="form-group">
        <label asp-for="Language"></label>
        <span asp-validation-for="Name"></span>
        <select asp-for="Language">
        @foreach(string lang in Survey.GetLanguages())
        {
            <option value="@lang">@lang</option>
        }
        </select>
    </div>
    <input type="submit" value="Add Survey">
</form>
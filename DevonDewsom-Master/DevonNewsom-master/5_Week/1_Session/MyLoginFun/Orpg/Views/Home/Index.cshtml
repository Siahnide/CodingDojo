<!DOCTYPE html>
@using Microsoft.AspNetCore.Http
@model Orpg.Models.User

<html>
<head>
<link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>

<body>
<h1>Welcome To Savaged Rpg!</h1>
<p>Login to Continue the Adventure!</p>
<form asp-action="Login" asp-controller="Home" method="POST">
    
        <label asp-for="email">Email:
        <input asp-for="email" ><br>
        <label asp-for="password">Password:
        <input asp-for="password" ><br>
    <input type="submit" value="Login">
</label></label></form>


<div id="footer">
    <p>Not a user? Create an Account and join the Action!</p>
    <form asp-action="Registration" asp-controller="Home" method="POST">
        <span asp-validation-for="username"></span>
        <label asp-for="username">Username:
        <input asp-for="username" ><br>
        <span asp-validation-for="email"></span>
        <label asp-for="email">Email:
        <input asp-for="email" ><br>
        <span asp-validation-for="password"></span>
        <label asp-for="password">Password:
        <input asp-for="password" ><br>
        <input type="submit" value="Create Account!">
    </label></label></label></label></form>
</div>
</body>
</html>


